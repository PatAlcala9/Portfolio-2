---
const { text } = Astro.props
---

<script>
  import { mode } from '../stores/mode'
  import vars from '../assets/js/variables.js'

  const description = document.getElementById('description')

  mode.subscribe((value) => {
    if (value === 'programmerMode') {
      description.style.color = vars.modeProgrammerTextColor
      description.style.fontFamily = vars.modeProgrammerFontFamily
      description.style.fontWeight = '500'
      description.style.border = `1px solid ${vars.modeProgrammerTextColor}`
      description.style.padding = '0.5rem'
      description.style.borderRadius = '0.5rem'
      description.style.backgroundColor = vars.modeProgrammerBackgroundColor
    } else if (value === 'designerMode') {
      description.style.color = vars.modeDesignerTextColor
      description.style.fontFamily = vars.modeDesignerFontFamily
    } else if (value === 'writerMode') {
      description.style.color = vars.modeWriterTextColor
      description.style.fontFamily = vars.modeWriterFontFamily
    }
  })
</script>

<section id="description">
  <span class="description">{text}</span>
</section>

<style lang="sass">
  .description
    font-size: 1.25rem
</style>
