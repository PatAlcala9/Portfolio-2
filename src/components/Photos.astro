<script>
  import { mode } from '../stores/mode.js'

  const photos = document.getElementById('photos')

  mode.subscribe((val) => {
    switch (val) {
      case 'programmerMode':
        photos.style.backgroundColor = 'blue'
        break
      case 'designerMode':
        photos.style.backgroundColor = 'yellow'
        break
      case 'writerMode':
        photos.style.backgroundColor = 'white'
        break
      default:
        photos.style.backgroundColor = 'black'
        break
    }
  })
</script>
