<script>
  import { mode } from '../stores/mode.js'
  import { gsap } from 'gsap'

  const photos = document.getElementById('photos')

  mode.subscribe((val) => {
    switch (val) {
      case 'programmerMode':
        gsap.to(photos, { duration: 0.4, backgroundColor: '#0000FF', ease: 'power2.out' })
        break
      case 'designerMode':
        gsap.to(photos, { duration: 0.4, backgroundColor: '#FFFF00', ease: 'power2.out' })
        break
      case 'writerMode':
        gsap.to(photos, { duration: 0.4, backgroundColor: '#FFFFFF', ease: 'power2.out' })
        break
      default:
        gsap.to(photos, { duration: 0.4, backgroundColor: '#000000', ease: 'power2.out' })
        break
    }
  })
</script>
