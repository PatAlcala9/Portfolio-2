<script>
  import { mode } from '../stores/mode'
  import { gsap } from 'gsap'

  const dev = document.getElementById('positions__dev')
  const design = document.getElementById('positions__design')
  const write = document.getElementById('positions__write')

  const activeSize = '2rem'
  const inactiveSize = '1.5rem'

  mode.subscribe((value) => {
    if (value === 'programmerMode') {
      gsap.to(dev, { duration: 0.4, fontSize: activeSize, fontWeight: 'bold', ease: 'power2.out' })
      gsap.to(design, { duration: 0.4, fontSize: inactiveSize, fontWeight: 'normal', ease: 'power2.out' })
      gsap.to(write, { duration: 0.4, fontSize: inactiveSize, fontWeight: 'normal', ease: 'power2.out' })
    } else if (value === 'designerMode') {
      gsap.to(dev, { duration: 0.4, fontSize: inactiveSize, fontWeight: 'normal', ease: 'power2.out' })
      gsap.to(design, { duration: 0.4, fontSize: activeSize, fontWeight: 'bold', ease: 'power2.out' })
      gsap.to(write, { duration: 0.4, fontSize: inactiveSize, fontWeight: 'normal', ease: 'power2.out' })
    } else if (value === 'writerMode') {
      gsap.to(dev, { duration: 0.4, fontSize: inactiveSize, fontWeight: 'normal', ease: 'power2.out' })
      gsap.to(design, { duration: 0.4, fontSize: inactiveSize, fontWeight: 'normal', ease: 'power2.out' })
      gsap.to(write, { duration: 0.4, fontSize: activeSize, fontWeight: 'bold', ease: 'power2.out' })
    }
  })
</script>

